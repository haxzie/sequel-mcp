{
  "name": "@sequelsh/mcp",
  "module": "bin/index.ts",
  "version": "0.0.13",
  "description": "Sequel's Model Context Protocol CLI for Databace MCPs",
  "type": "module",
  "bin": {
    "@sequelsh/mcp": "dist/index.js"
  },
  "@sequelsh/mcp": "dist/index.js",
  "author": {
    "name": "Sequel",
    "email": "support@sequel.sh",
    "url": "https://sequel.sh"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run bin/index.ts install",
    "build": "bun build bin/index.ts --outdir dist --target node",
    "typecheck": "bun x tsc --noEmit",
    "lint": "bun x eslint . --ext .ts",
    "start": "bun run bin/index.ts -d postgresql",
    "mcp:install": "bun run bin/index.ts install -d postgresql -c claude",
    "prepublishOnly": "NODE_ENV=production bun run build && bun run typecheck",
    "release": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "standard-version": "^9.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@clickhouse/client": "^1.11.0",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "inquirer": "^12.5.0",
    "mysql2": "^3.14.0",
    "ora": "^8.2.0",
    "postgres": "^3.4.5"
  }
}
